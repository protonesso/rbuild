class rBuild(BuildPackageRecipe):
    name = 'rbuild'
    version = '1.2'

    buildRequires = [
        'rpath-product-definition:python',
        'rmake:python',
        'mercurial',
        'robj:python',
        'smartform:python',
        'python-sphinx',
    ]

    def setup(r):
        r.addMercurialSnapshot()
        r.Make()
        r.Make('man DESTDIR=%(destdir)s')
        r.MakeInstall('lib=%(lib)s')
